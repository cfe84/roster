{
  "name": "roster-electron",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "pack": "mkdir -p ./dist/frontend/ && cp -r ../frontend/dist/* ./dist/frontend && tsc",
    "bnr": "npm run build && npm run start",
    "start": "electron .",
    "frontend": "npm run --prefix ../frontend build-for-electron",
    "build": "npm run frontend && npm run pack",
    "package-win64": "electron-packager dist/ roster --platform=win32 --arch=x64 --overwrite",
    "package-mac64": "electron-packager dist roster --platform=darwin --arch=x64 --overwrite"
  },
  "author": "Charles Feval",
  "license": "MIT",
  "devDependencies": {
    "electron": "^9.4.0",
    "electron-packager": "^14.1.1",
    "typescript": "^3.7.3"
  }
}