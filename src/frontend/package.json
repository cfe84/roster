{
  "name": "roster-frontend",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "watch": {
    "sass": {
      "patterns": [
        "style"
      ],
      "extensions": "sass,scss"
    },
    "static": {
      "patterns": [
        "static"
      ],
      "extensions": "html,js,css"
    },
    "webpack": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,tsx"
    }
  },
  "scripts": {
    "clean": "rm -r dist/",
    "test": "echo 'no tests'",
    "sass": "sass style/style.sass dist/style.css",
    "static": "mkdir -p dist && cp -r static/* dist/",
    "tsc": "tsc",
    "webpack": "npx webpack",
    "build": "npm run static && npm run sass && npm run webpack",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cfe84/roster.git"
  },
  "author": "Charles Feval",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cfe84/roster/issues"
  },
  "homepage": "https://github.com/cfe84/roster#readme",
  "devDependencies": {
    "bootstrap": "^4.4.0",
    "npm-watch": "^0.6.0",
    "sass": "^1.23.7",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  }
}